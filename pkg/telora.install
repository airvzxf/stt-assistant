post_install() {
    echo ":: Telora has been installed."
    echo ":: IMPORTANT: You need to download a speech model before using Telora."
    echo ":: Please run the following command to download the base model:"
    echo ":: "
    echo "::     telora-models download base"
    echo ":: "
    echo ":: You can also list available models with 'telora-models list'."
}

post_upgrade() {
    post_install
}
